{
    "name": "eunael/buscador-cursos-alura",
    "description": "Projeto para buscar os cursos no site da Alura",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Alura\\CoursesSearcher\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "authors": [
        {
            "name": "Natanael A. de Morais",
            "email": "natanaelallves@gmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.9",
        "symfony/dom-crawler": "^7.1",
        "symfony/css-selector": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "squizlabs/php_codesniffer": "*",
        "phan/phan": "^5.4"
    },
    "scripts": {
        "test": "phpunit src/tests/CoursesSearcherTest.php",
        "cs": "phpcs --standard=PSR12 src",
        "phan": "phan --allow-polyfill-parser",
        "check": [
            "@test",
            "@cs",
            "@phan"
        ],
        "post-update-cmd": [
            "@test"
        ]
    },
    "scripts-descriptions": {
        "test": "Executa os testes",
        "cs": "Verifica se o c처digo segue o padr찾o PSR12",
        "phan": "Verifica se o c처digo segue o padr찾o PSR12",
        "check": "Executa os comandos PHAN, PHPCS e PHPUNIT"
    },
    "bin": ["/src/search-courses.php"]
}
